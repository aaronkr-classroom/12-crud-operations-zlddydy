<main class="">
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="pt-5">
      <h1>Users Table</h1>
      <p>Here are all the users on our site.</p>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
          <tr>
            <td><%= u,fullName %></td>
            <td><%= u.email %></td>
            <td>
              <a href="users/<%= u.id %>/edit">Edit</a>
              <a href="users/<%= u.id %>/delete">Delete</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <!-- <div class="mt-5 text-center">
        <a href="/" class="btn ut-red">Delete All Users</a>
      </div> -->
    </div>
  </div>
</main>
